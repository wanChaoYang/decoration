/* components/bannerTop/bannerTop.wxss */
.banner-img {
  background-repeat: repeat;
  background-size: 100% 100%;
  height: 563rpx;
  width: 100%;
}
.banner-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  background: rgba(0, 0, 0, 1);
  color: #fff;
  height: 80rpx;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.foot-con {
  opacity:0.8;
  color: rgba(255, 255, 255, 1);
  font-size: 22rpx;
  font-family: PingFang SC;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot-con text{
  padding: 0 10rpx;
  height: 26rpx;
}
.boder-left{
  border-left: 1px solid rgba(255,255,255,1);
}