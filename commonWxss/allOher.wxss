/**全局水平左右分布*/
.allFlexBet{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 全局水平均匀分布 */
.allFlexAro{
  display: flex;
  justify-content: space-around;
}
/* 全局强制部换行 */
.nowrap{
  display: flex;
  flex-wrap: nowrap;
}
/* 全局强制换行 */
.wrap{
  display: flex;
  flex-wrap: wrap;
}
/* 内容水平+垂直居中 */
.center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.bor8{
  border-radius: 10rpx;
}
.submitButton{
  background: linear-gradient(to right,#91e243,#49A73E);
  color: #fff;
  width: 80%;
  margin: auto;
  padding: 10rpx 0;
  font-size: 30rpx;
}
/* 遮罩层，内容水平居中，需在子元素中设置margin：auto */
.mask{
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.5);
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  display: -webkit-flex;
}
.alignCenter{
  display: flex;
  align-items: center
}
/* 垂直均匀分布 */
.coumAro{
  display: flex;
  justify-content: space-around;
  flex-direction: column
}
/* 垂直居中 */
.coumCen{
  display: flex;
  justify-content: center;
  flex-direction: column
}
.allFlexCen{
  display: flex;
  justify-content: center;
}
/* 超出部分...显示 */
.flowShow{
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.flowRow{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.page-w-bg{
  background-color: #fff;
  min-height: 500px;
}