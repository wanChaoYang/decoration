/**index.wxss**/
.home-page {
  background: #fff;
}

.nav-home {
  /* border: 1px solid black; */
  width: 100%;
  min-height: 575rpx;
}

.backgrond-nav {
  background-color: #616161;
  width: 100%;
  padding: 20rpx 18rpx 0 18rpx;
  align-items: center;
}

.hi-text {
  font-size: 70rpx;
  font-family: PingFang SC;
  font-weight: 800;
  line-height: 98rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 1;
}

.subscribe {
  background: #fff;
  width: 139rpx;
  height: 55rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(112, 112, 112, 1);
  opacity: 1;
  border-radius: 28rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 800;
  line-height: 55rpx;
  color: rgba(51, 51, 51, 1);
}

.desc-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 33rpx;
  background-color: #616161;
  color: rgba(223, 223, 223, 1);
  opacity: 1;
  padding: 0 0.5rem;
}

.swiper-con {
  width: 100%;
  height: 290rpx;
  background-color: #616161;
  /* border: 1px solid red; */
  border-radius: 0rpx 0rpx 69rpx 69rpx;
  position: relative;
}

.swiper-con-img {
  position: absolute;
  width: 92%;
  height: 375rpx;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  overflow: hidden;
  top: 40rpx;
}

.case-outfit {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 40rpx;

}

.case-outfit-list {
  /* border:1px solid black; */
  width: 25%;
  text-align: center;
  margin-bottom: 40rpx;
}

.case-outfit-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(107, 112, 134, 1);
  opacity: 1;
}

.case-input {
  width: 320rpx;
  height: 90rpx;
  background: #F5F6FA;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(107, 112, 134, 1);
  opacity: 1;
  padding: 0 20rpx;
}

.case-input input {
  height: 90rpx;
}

.btn-bg{
  width: 320rpx;
  height: 90rpx;
  background: #6B7086;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 90rpx;
  color: #fff;
  opacity: 1;
  padding: 0 20rpx;
  text-align: center;
}