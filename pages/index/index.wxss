/**index.wxss**/
.home-page {
  background: #fff;
}

.nav-home {
  /* border: 1px solid black; */
  width: 100%;
  min-height: 575rpx;
}

.backgrond-nav {
  background-color: #616161;
  width: 100%;
  padding: 20rpx 18rpx 0 18rpx;
  align-items: center;
}

.hi-text {
  font-size: 70rpx;
  font-family: PingFang SC;
  font-weight: 800;
  line-height: 98rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 1;
}

.subscribe {
  background: #fff;
  width: 139rpx;
  height: 55rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(112, 112, 112, 1);
  opacity: 1;
  border-radius: 28rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 800;
  line-height: 55rpx;
  color: rgba(51, 51, 51, 1);
}

.desc-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 33rpx;
  background-color: #616161;
  color: rgba(223, 223, 223, 1);
  opacity: 1;
  padding: 0 0.5rem;
}

.swiper-con {
  width: 100%;
  height: 290rpx;
  background-color: #616161;
  /* border: 1px solid red; */
  border-radius: 0rpx 0rpx 69rpx 69rpx;
  position: relative;
}

.swiper-con-img {
  position: absolute;
  width: 92%;
  height: 375rpx;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  overflow: hidden;
  top: 40rpx;
}

.case-outfit {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 40rpx;

}

.case-outfit-list {
  /* border:1px solid black; */
  width: 25%;
  text-align: center;
  margin-bottom: 40rpx;
}

.case-outfit-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(107, 112, 134, 1);
  opacity: 1;
}

.case-input {
  width: 320rpx;
  height: 90rpx;
  background: #F5F6FA;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(107, 112, 134, 1);
  opacity: 1;
  padding: 0 20rpx;
}

.case-input input {
  height: 90rpx;
}

.btn-bg {
  width: 320rpx;
  height: 90rpx;
  background: #6B7086;
  opacity: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 90rpx;
  color: #fff;
  opacity: 1;
  padding: 0 20rpx;
  text-align: center;
}

.case-title {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: 800;
  line-height: 53rpx;
  color: rgba(107, 112, 134, 1);
  opacity: 1;
  padding: 0 25rpx;
  margin: 40rpx 0;
}

.scroll-item {
  border: 1px solid black;
  width: 320rpx;
  margin: 0 10rpx;
  height: 200rpx;
  display: inline-block;
}

.scrollContainer {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  width: 100%;
  height: 200rpx;
  /* border-top: 1rpx solid #EF639F;
  border-bottom: 1rpx solid #EF639F; */
  /* background-color: #EEE; */
  padding: 0 10rpx;
}

.swi-container {
  height: 140rpx;
  border-radius: 70rpx 70rpx 70rpx 70rpx;
  overflow: hidden;
}

.swi-small {
  padding: 0 30rpx;
}

.dot-main {
  /* border:1px solid black; */
  display: flex;
  justify-content: center;
}

.dot-item {
  width: 35rpx;
  height: 6rpx;
}

.dot-item-all {
  transition: all 0.1s linear;
  background: rgba(143, 146, 159, 1);
  opacity: 1;
  border-radius: 3rpx;
  margin: 10rpx;
}

.dot-item2 {
  width: 10rpx;
  height: 6rpx;
}

.see-case-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 0;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  /* line-height: 33rpx; */
  color: rgba(107, 112, 134, 1);
}